<div class="indent2">
  <table class="table table-striped">
  	<thead>
      <tr>
        <th>&nbsp;</th>
        <th>Name</th>
        <th>Tags</th>
        <th>Location</th>
      </tr>
    </thead>

  	<% project.evidences.each do |evidence|%>
  	  <tr>
        <td><a href ="evidences/<%= evidence.id %>"><%= image_tag evidence.photo.url(:thumb) %></a></td>
  	  	<td><%= link_to evidence.name, evidence %></td>
        <td><%= evidence.tags.map{ |e| e.name  }.join(",") %></td>
        <td><%= evidence.location %></td>
  	  </tr>
  	<% end %>
  </table>
</div>