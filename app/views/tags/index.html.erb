<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Section</th>
      <th>Maximum Points</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag %></td>
        <td><%= tag.rating %></td>
        <td><%= tag.section %></td>
        <td><%= tag.max_points %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

