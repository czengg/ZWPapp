<h1>Clients</h1>
<p id="notice"><%= notice %></p>

<fieldset>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Phone</th>
        <th>Email</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client.name %></td>
          <td><%= link_to client.company.name, client.company %></td>
          <td><%= client.phone %></td>
          <td><%= client.email %></td>
          <td><%= link_to 'Edit', edit_client_path(client) %></td>
          <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>

<br>

<a class="btn btn-default" href="/clients/new" role="button">New Client</a>
